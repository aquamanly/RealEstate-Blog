<body>

    <h1>Register</h1>
    <form action="/users/register" method="post">
        <!-- THIS IS IMPORTANT: YOU HAVE TO SEND THE OBJECT TO THE SPECITIC ROUTER! -->
        <input name="username" placeholder="Name" type="text" value="<%= users.username %>"  required/>
        <input type="email" name="email" placeholder="Email" value="<%= users.email %>" required />
        <input type="password" name="password" placeholder="Password" value="<%= users.password %>" required />
        <input type="submit"/>
    </form>
    
    <a href="/users/login">LOGIN</a>
</body>
